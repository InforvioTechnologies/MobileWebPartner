<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adhoc.app.applibrary.AppBaseActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User.ProfileSettings">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars = "vertical"
            android:scrollbarStyle="insideInset">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatTextView
                    android:gravity="center"
                    style="@style/SmallText"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/Partner_Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorWhite"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/ic_user_name"
                    app:met_iconPadding="@dimen/text_size"
                    android:layout_marginBottom="13dp"
                    app:met_textColorHint="@color/colorPrimary" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/mob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mob"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:textColor="@color/colorWhite"
                            app:met_floatingLabel="highlight"
                            app:met_iconLeft="@drawable/ic_mobile"
                            app:met_iconPadding="@dimen/text_size"
                            android:layout_marginBottom="13dp"
                            app:met_textColorHint="@color/colorPrimary" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:id="@+id/Ly_edit_option"
                        android:orientation="horizontal"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/edit_option"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_option" />

                    </LinearLayout>
                </LinearLayout>



                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorWhite"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/ic_mail"
                    app:met_iconPadding="@dimen/text_size"
                    app:met_textColorHint="@color/colorPrimary" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:visibility="gone"
                    android:id="@+id/bussiness_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:hint="@string/bussiness_type"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorWhite"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/offer1"
                    app:met_iconPadding="@dimen/text_size"
                    app:met_textColorHint="@color/colorPrimary" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/Ly_business_type"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_bussiness"
                        android:layout_width="match_parent"
                        style="@style/SmallText"
                        android:textColor="@color/colorPrimary1"
                        android:text="@string/bussiness"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/offer1"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <Spinner
                            android:layout_marginLeft="6dp"

                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:backgroundTint="#ff000000"
                            android:backgroundTintMode="src_in"
                            android:spinnerMode="dropdown"
                            android:id="@+id/spinner_business_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:visibility="gone"
                    android:id="@+id/pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pan"
                    android:inputType="textCapCharacters"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorWhite"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/bank_details"
                    app:met_iconPadding="@dimen/text_size"
                    android:layout_marginBottom="13dp"
                    app:met_textColorHint="@color/colorPrimary" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addess"
                    style="@style/SmallText"
                    android:id="@+id/pan_note"
                    android:layout_marginBottom="5dp"/>

                <android.support.v7.widget.AppCompatEditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/addess"
                    android:layout_width="match_parent"
                    android:gravity="top|start"
                    android:padding="10dp"
                    android:hint="@string/addess"
                    android:layout_marginBottom="15dp"
                    style="@style/SmallText"
                    android:background="@drawable/edittext_style"
                    android:layout_height="100dp" />

                <!--  <com.rengwuxian.materialedittext.MaterialEditText
                      android:id="@+id/address"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/addess"
                      android:imeOptions="actionNext"
                      android:inputType="textEmailAddress"
                      android:textColor="@color/colorWhite"
                      app:met_floatingLabel="highlight"
                      app:met_iconLeft="@drawable/location_on"
                      app:met_iconPadding="@dimen/text_size"
                      android:layout_marginBottom="13dp"
                      app:met_textColorHint="@color/colorPrimary" />-->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:id="@+id/Ly_spinner"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/state_you"
                            android:layout_width="match_parent"
                            style="@style/SmallText"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/state_you"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/ic_state"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />
                            <Spinner
                                android:id="@+id/spinner_state"
                                android:layout_marginLeft="20dp"
                                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                                android:backgroundTint="#ff000000"
                                android:backgroundTintMode="src_in"
                                android:spinnerMode="dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/city_you"
                            android:layout_width="match_parent"
                            style="@style/SmallText"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/city_you"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/ic_city"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />
                            <Spinner
                                android:id="@+id/spinner_city"
                                android:layout_marginLeft="20dp"
                                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                                android:backgroundTint="#ff000000"
                                android:backgroundTintMode="src_in"
                                android:spinnerMode="dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/Ly_spinner_edt"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:hint="@string/state"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        app:met_iconLeft="@drawable/ic_state"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="@dimen/text_size"
                        android:layout_marginBottom="13dp"
                        app:met_textColorHint="@color/colorPrimary"
                        android:textColor="@color/gray_50"
                        android:textColorHint="@color/gray_50" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:hint="@string/city"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        app:met_iconLeft="@drawable/ic_city"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="@dimen/text_size"
                        android:layout_marginBottom="13dp"
                        app:met_textColorHint="@color/colorPrimary"
                        android:textColor="@color/gray_50"
                        android:textColorHint="@color/gray_50" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:hint="@string/pincode"
                        android:imeOptions="actionDone"
                        android:maxLength="6"
                        android:inputType="number"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="@dimen/text_size"
                        android:layout_marginBottom="13dp"
                        app:met_iconLeft="@drawable/ic_postal_code"
                        app:met_textColorHint="@color/colorPrimary"
                        android:textColor="@color/gray_50"
                        android:textColorHint="@color/gray_50" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/appCompatButtonGen_OTP"
                    android:layout_height="wrap_content"
                    android:theme="@style/ButtonStyle"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/updated"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorAccent"

        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorGolden"
        />
</android.support.design.widget.CoordinatorLayout>
