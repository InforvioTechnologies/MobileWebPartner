<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.loanwiser.partnerapp.OTP.SmsActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginTop="100dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:background="@drawable/loanwisersmall1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/verif"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary1"
                android:text="@string/enterotp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pls_enter"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SmallText"
                android:textColor="@color/gray"
                android:text="@string/otp_enter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTimeCount"
                    style="@style/SmallText"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/Mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter The otp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:textColor="@color/colorPrimary1"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/ic_mobile"
                app:met_iconPadding="@dimen/text_size"
                android:layout_marginBottom="13dp"
                app:met_textColorHint="@color/colorPrimary1"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="07dp"
                    android:drawableLeft="@drawable/ic_name2"
                    android:background="@drawable/capsul_button4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/Mob1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter The otp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:inputType="number"
                    android:textColor="@color/colorPrimary"
                    android:maxLength="12"

                    android:padding="12dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/appCompatButtonGen_OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/capsul_button3"
            android:text="@string/otp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
</LinearLayout>