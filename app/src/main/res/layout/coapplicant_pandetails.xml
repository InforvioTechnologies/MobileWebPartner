<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/pancardview_lay"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="10dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pandetailshead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pandetailsco"
                    android:textColor="#00bfff"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="10dp" />

                <LinearLayout
                    android:id="@+id/Ly_loan_cate"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            android:id="@+id/pancardnumtxt"
                            style="@style/SmallText"
                            android:text="@string/pancard_num"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/copancardtxt"
                            style="@style/SmallText"
                            android:textColor="@color/text_blue"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/Ly_loan_type_new_type"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            android:id="@+id/dateofborthhead"
                            style="@style/SmallText"
                            android:text="@string/dateofbith"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/codateofbithtxt"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/gendet"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            android:id="@+id/genderhead"
                            style="@style/SmallText"
                            android:text="@string/gender"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/cogendertxt"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/type_of_emploe"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            android:id="@+id/fathernametxthead"
                            style="@style/SmallText"
                            android:text="@string/fathername"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/cofathernametxt"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/benefitcoinlay"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            android:id="@+id/maritical_statushead"
                            style="@style/SmallText"
                            android:text="@string/martical_stat"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/comaritaltxt"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/depentlay"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            style="@style/SmallText"
                            android:text="No of dependents"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/conooddependents"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/educalay"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            style="@style/SmallText"
                            android:text="Education Qualification"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/coeducationqualtxt"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/assetlay"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8A8A8A"
                            style="@style/SmallText"
                            android:text="Assets Owned in"
                            android:textSize="16sp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            style="@style/SmallText"
                            android:text=":"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#032C58"
                            android:textStyle="bold"
                            android:id="@+id/coassetstxt"
                            style="@style/SmallText"

                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>