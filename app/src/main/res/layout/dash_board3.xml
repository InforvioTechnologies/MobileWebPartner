                                android:id="@+id/step4"
                                android:textSize="18sp"
                                android:textColor="@color/colorAccent"
                                android:text="Step 4"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                android:id="@+id/app_offer"
                                style="@style/LorgeText"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:text="Offers Details"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:id="@+id/callcenter_offer"
                            style="@style/SmallText"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:text="@string/app_offer_updated"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/ic_not_tick"
                            android:gravity="center"
                            android:id="@+id/app_offer_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
