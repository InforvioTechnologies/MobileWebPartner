<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hl"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:gravity="center"
                            android:background="@drawable/app_pro1"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            style="@style/LorgeText"
                            android:id="@+id/step1"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:text="Step 1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            style="@style/LorgeText"
                            android:id="@+id/app_info"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/app_details"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            style="@style/SmallText"
                            android:textSize="12sp"
                            android:id="@+id/app_info_message"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/thanks_apply"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/downarrow1"
                            android:gravity="center"
                            android:id="@+id/app_info_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:visibility="gone"
                            android:background="@drawable/uparro1"
                            android:gravity="center"
                            android:id="@+id/app_info_img11"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lead_cr_statues"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_document"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/app_pro"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/SmallText"
                                android:id="@+id/Doc_status"
                                android:textColor="@color/black"
                                android:text="@string/lead_creation1"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/don"
                                android:gravity="center"
                                android:id="@+id/app_info_img1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_in_progress"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/app_pro"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"

                                android:id="@+id/In_Progress"
                                style="@style/SmallText"
                                android:textColor="@color/black"
                                android:text="@string/viy_check"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/don"
                                android:gravity="center"
                                android:id="@+id/app_info_img2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/eligibility_check"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/app_pro"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                android:id="@+id/eligibility"
                                style="@style/SmallText"
                                android:textColor="@color/black"
                                android:text="@string/eligi_check"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/don"
                                android:gravity="center"
                                android:id="@+id/app_info_img3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_approved"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/app_pro"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/SmallText"
                                android:id="@+id/Approved"
                                android:textColor="@color/black"
                                android:text="@string/credit_report_gen"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                            android:background="@drawable/don"
                            android:gravity="center"
                            android:id="@+id/app_info_img4"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <View
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="10dp"
            android:background="#d0d8e8"/>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lap"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:gravity="center"
                            android:background="@drawable/file1"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            style="@style/LorgeText"
                            android:id="@+id/step2"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:text="Step 2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            style="@style/LorgeText"
                            android:id="@+id/app_doc"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/doc_upload"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            style="@style/SmallText"
                            android:textSize="12sp"
                            android:id="@+id/app_doc_message"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/upload_fast"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/notdon"
                            android:gravity="center"
                            android:id="@+id/app_doc_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/PL"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:gravity="center"
                            android:background="@drawable/document_verification"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/LorgeText"
                                android:id="@+id/step3"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:text="Step 3"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/LorgeText"
                                android:id="@+id/app_interview"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:text="Document Verification"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:id="@+id/customerinterview_offer"
                            style="@style/SmallText"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:text="@string/app_offer_updated"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/notdon"
                            android:gravity="center"
                            android:id="@+id/app_interview_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Blo"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:gravity="center"
                            android:background="@drawable/offer2"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/LorgeText"
                                android:id="@+id/step4"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:text="Step 4"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                android:id="@+id/app_offer"
                                style="@style/LorgeText"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:text="Offers Details"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:id="@+id/callcenter_offer"
                            style="@style/SmallText"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:text="@string/app_offer_updated"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/notdon"
                            android:gravity="center"
                            android:id="@+id/app_offer_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/CD_app_track"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:background="@drawable/ripple_effect"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="90dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:gravity="center"

                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_gravity="center"
                        style="@style/LorgeText"
                        android:id="@+id/app_track"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/app_track"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/app_track_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>