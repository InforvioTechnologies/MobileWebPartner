<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Partner_Statues.BusinesscardEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:orientation="vertical">



                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:strokeColor="#002B5D"
                    app:strokeWidth="1dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:background="@drawable/businesscard_background"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/loanwiser"
                            android:tint="@color/colorPrimary"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp" />

                        <RelativeLayout
                            android:id="@+id/profilelay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/imgview">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/profileimg"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:tint="#BCE0FD"
                                android:src="@drawable/ic_profile"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/nametxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/profileimg"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/colorPrimary"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/positiontxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/profileimg"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Official Loanwiser Partner"
                                android:layout_below="@+id/nametxt"
                                android:textColor="@color/sky_blue"/>

                            <RelativeLayout
                                android:id="@+id/detailslay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/positiontxt"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="20dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/emailicon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_email_24"
                                    android:tint="#002B5D" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/emailtxt"
                                    android:textColor="#002B5D"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/emailicon"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/emailtxt"
                                    android:layout_marginTop="10dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/webicon"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_webicon"
                                        android:tint="#002B5D"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/webtxt"
                                        android:textColor="#002B5D"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toRightOf="@id/webicon"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/webtxt"
                                        android:layout_marginTop="10dp">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/phnicon"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_phone_24"
                                            android:tint="#002B5D"/>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/phntxt"
                                            android:textColor="#002B5D"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_toRightOf="@id/phnicon"/>

                                        <RelativeLayout
                                            android:id="@+id/locationlay"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/phntxt"
                                            android:layout_marginTop="10dp">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:id="@+id/location_icon"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/ic_location24"
                                                android:tint="#002B5D"/>

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/locationtxt"
                                                android:textColor="#002B5D"
                                                android:layout_marginTop="2dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_toRightOf="@id/location_icon"/>


                                        </RelativeLayout>




                                    </RelativeLayout>
                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>



                    </RelativeLayout>




                </com.google.android.material.card.MaterialCardView>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#2680EB"
                    android:textSize="12sp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/nameedittxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#2680EB"
                    android:background="@drawable/edittext_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#2680EB"
                    android:textSize="12sp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/emailedittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#2680EB"
                    android:background="@drawable/edittext_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textColor="#2680EB"
                    android:textSize="12sp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mobileedittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="#2680EB"
                    android:background="@drawable/edittext_border"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#2680EB"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/locationedittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#2680EB"
                    android:background="@drawable/edittext_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updatebutton"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:text="Update info"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/but_shape_blue"/>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>