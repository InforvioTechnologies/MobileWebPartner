<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.loanwiser.partnerapp.CustomerCare.CustomerCare">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_call_coimbatore"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/ic_call_all"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/SmallText"
                                android:id="@+id/call_coimbatore"
                                android:textColor="@color/black"
                                android:text="@string/call_coimbatore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_call_rajasthan"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/ic_call_all"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center"
                                android:id="@+id/call_rajasthan"
                                style="@style/SmallText"
                                android:textColor="@color/black"
                                android:text="@string/call_rajasthan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_call_ap"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/ic_call_all"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/SmallText"
                                android:id="@+id/call_ap"
                                android:textColor="@color/black"
                                android:text="@string/call_ap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/Approved_count"
                                android:gravity="center"
                                android:visibility="gone"
                                style="@style/SmallText"
                                android:textColor="@color/black"
                                android:layout_width="45dp"
                                android:layout_height="45dp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CD_call_telangana"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/ic_call_all"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/SmallText"
                                android:id="@+id/call_telangana"
                                android:textColor="@color/black"
                                android:text="@string/call_telangana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
           
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/closed"
                android:visibility="gone"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:background="@drawable/ic_call_all"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center"
                                style="@style/SmallText1"
                                android:id="@+id/Closed"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:text="Closed"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/Closed_count"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_width="45dp"
                                android:layout_height="45dp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



    </LinearLayout>

    </ScrollView>

</LinearLayout>