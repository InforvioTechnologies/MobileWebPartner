<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView

        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/shadow_colour"
                android:visibility="gone"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/noteid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="12dp"
                        android:textColor="#002B5D"
                        android:text="@string/note"/>

                    <LinearLayout
                        android:id="@+id/earning_details_id"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/noteid"
                            android:textColor="#002B5D"
                            android:textSize="12dp"
                            android:layout_centerHorizontal="true"
                            android:text="@string/clickhere"/>
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                    <TextView
                        android:layout_marginTop="55dp"
                        android:id="@+id/steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/step_one"
                        android:paddingRight="24dp"
                        android:paddingEnd="24dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#2699FB"
                        android:clickable="true" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/basic_lead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_lead"
                        android:paddingRight="24dp"
                        android:paddingEnd="24dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#002B5D"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/basic_leaddesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_leaddesc"
                        android:layout_marginTop="10dp"
                        android:paddingRight="24dp"
                        android:paddingEnd="22sp"
                        android:textSize="12dp"
                        android:visibility="invisible"
                        android:textColor="@color/text_blue"
                        android:clickable="true" />
                    </LinearLayout>

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="210dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/steps2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/step_two"
                            android:paddingRight="24dp"
                            android:paddingEnd="24dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#2699FB"
                            android:clickable="true" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/viability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/viabilitycheck"
                            android:paddingRight="24dp"
                            android:paddingEnd="24dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#002B5D"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/viability_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/via_descone"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/instantcredit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  Viable Bank"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#002B5D"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/instantcredit_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/instant_desc"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/eligiblitycheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  Viability Report"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#002B5D"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/basic_leaddesc1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/eligiblity_des"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/steps3"
                            android:layout_marginTop="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/step_three"
                            android:paddingRight="14dp"
                            android:paddingEnd="14dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#2699FB"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/document_upload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/document_title"
                            android:layout_marginTop="7dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="24dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/document_uploaddes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/document_desc"
                            android:layout_marginTop="10dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/bank_availability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  Bank Availability Check"
                            android:layout_marginTop="7dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="24dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/document_desc"
                            android:layout_marginTop="10dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/automated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  Automated Underwriting"
                            android:layout_marginTop="7dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="24dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/document_desc"
                            android:layout_marginTop="10dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/eligibility_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-  Eligibility Report"
                            android:layout_marginTop="7dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="24dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/document_desc"
                            android:layout_marginTop="10dp"
                            android:paddingRight="24dp"
                            android:paddingEnd="22sp"
                            android:textSize="12dp"
                            android:visibility="invisible"
                            android:textColor="@color/text_blue"
                            android:clickable="true" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/proceed_button"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:background="@drawable/background_button"
                            android:textColor="@color/white"
                            android:elevation="5dp"
                            android:text="@string/proceed"/>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/proceed_button1"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:background="@drawable/background_button"
                    android:textColor="@color/white"
                    android:elevation="5dp"
                    android:text="@string/proceed"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>