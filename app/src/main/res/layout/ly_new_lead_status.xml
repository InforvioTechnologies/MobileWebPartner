<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
    android:layout_marginTop="1.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_doc_typename"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
      android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        app:cardCornerRadius="4dp"
        android:clipToPadding="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp">
    <LinearLayout
        android:id="@+id/Over_all"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:id="@+id/Lead_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="Lead Name"
                    android:textColor="@color/colorPrimary1" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:id="@+id/loan_amount"
                    android:textStyle="bold"
                    style="@style/SmallText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan amount"
                    android:textColor="@color/colorPrimary1" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText1"
                    android:gravity="left"
                    android:id="@+id/app_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="App id"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:id="@+id/loan_type"
                    style="@style/SmallText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Loan"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/SmallText1"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Payment Plan :"
                            android:textStyle="bold"
                            android:textColor="@color/gray_sade" />

                    </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText1"
                    android:gravity="left"
                    android:id="@+id/payment_plane"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#2699FB" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText1"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Completed up to :"
                    android:textColor="@color/gray_sade" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText1"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Step"
                    android:id="@+id/step_com"
                    android:textColor="#2699FB" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/SmallText1"
                        android:text="Ask Status:"
                        android:id="@+id/ask_statues"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_sade" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText1"
                    android:text="Pending Ask(12)"
                    android:id="@+id/status_Ask"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="gone"
                    android:gravity="center"
                    style="@style/SmallText"
                    android:textSize="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="@string/text_with_bullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="left"
                    android:id="@+id/statues_new1"
                    style="@style/SmallText1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="statues :"
                    android:textColor="@color/gray_sade" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Statues_update_dot"
                        android:gravity="center"
                        style="@style/SmallText"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="@string/text_with_bullet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="left"
                        android:id="@+id/statues_new"
                        style="@style/SmallText1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="statues"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="gone"
                    android:text="View"
                    android:id="@+id/Statues_update_view"
                    android:gravity="center"
                    style="@style/SmallText"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/capsul_button4"
                    android:layout_width="118dp"
                    android:layout_height="33dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="View"
                    android:id="@+id/Statues_update_view1"
                    android:gravity="center"
                    style="@style/SmallText"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/capsul_button41"
                    android:layout_width="118dp"
                    android:layout_height="33dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

