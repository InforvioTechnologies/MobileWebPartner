<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="in.loanwiser.partnerapp.User_Account.Registration">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@color/colorWhite"
                app:met_floatingLabel="highlight"
                style="@style/SmallText1"
                app:met_iconLeft="@drawable/ic_name"
                app:met_iconPadding="@dimen/text_size"
                android:layout_marginBottom="13dp"
                app:met_textColorHint="@color/colorPrimary1" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mob"
                android:imeOptions="actionNext"
                android:inputType="phone"
                style="@style/SmallText1"
                android:textColor="@color/colorWhite"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/ic_mobile"
                app:met_iconPadding="@dimen/text_size"
                android:layout_marginBottom="13dp"
                app:met_textColorHint="@color/colorPrimary1" />

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bussiness"
                    android:layout_width="match_parent"
                    style="@style/SmallText"
                    android:textColor="@color/colorPrimary1"
                    android:text="@string/bussiness"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/offer1"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <Spinner
                        android:layout_marginLeft="6dp"
                        style="@style/SmallText1"
                        android:id="@+id/spinner_business_type"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/state_you"
                    android:layout_width="match_parent"
                    style="@style/SmallText"
                    android:textColor="@color/colorPrimary1"
                    android:text="@string/state_you"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_state"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <Spinner
                        android:id="@+id/spinner_state"
                        style="@style/SmallText1"
                        android:layout_marginLeft="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/city_you"
                    android:layout_width="match_parent"
                    style="@style/SmallText"
                    android:textColor="@color/colorPrimary1"
                    android:text="@string/city_you"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_city"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <Spinner
                        android:id="@+id/spinner_city"
                        android:layout_marginLeft="6dp"
                        style="@style/SmallText1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                </LinearLayout>


            </LinearLayout>



