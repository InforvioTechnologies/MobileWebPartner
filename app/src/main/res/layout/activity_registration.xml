            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:hint="@string/state"
                android:imeOptions="actionNext"
                android:inputType="text"
                style="@style/SmallText1"
                app:met_iconLeft="@drawable/ic_state"
                app:met_floatingLabel="highlight"
                app:met_iconPadding="@dimen/text_size"
                android:layout_marginBottom="13dp"
                app:met_textColorHint="@color/colorPrimary1"
                android:textColor="@color/gray_50"
                android:textColorHint="@color/gray_50" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/pincode"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:cursorVisible="false"
                    android:hint="@string/pincode"
                    android:imeOptions="actionDone"
                    android:maxLength="6"
                    style="@style/SmallText1"
                    android:inputType="number"
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="@dimen/text_size"
                    android:layout_marginBottom="13dp"
                    app:met_iconLeft="@drawable/ic_postal_code"
                    app:met_textColorHint="@color/colorPrimary1"
                    android:textColor="@color/gray_50"
                    android:textColorHint="@color/gray_50" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="10dp"
                android:id="@+id/appCompatButtonGen_OTP"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/capsul_button3"
                android:text="@string/generate"
                android:theme="@style/ButtonStyle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                style="@style/LorgeText"
                android:text="OR"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:background="@color/gray"
                android:layout_marginTop="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/tools"
                android:id="@+id/Gmail_reg"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1.5dp"
                app:cardCornerRadius="4dp"
                android:clipToPadding="false"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView

                            android:layout_gravity="center"
                            android:background="@drawable/search"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            style="@style/SmallText"
                            android:text="@string/gamil_reg"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>