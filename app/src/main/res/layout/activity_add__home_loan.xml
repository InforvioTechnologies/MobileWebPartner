                            android:padding="07dp"
                            android:drawableLeft="@drawable/phone"
                            android:background="@drawable/capsul_button4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/mob1"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Mobile No"

                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:background="@drawable/capsul_button6"

                            android:layout_marginRight="15dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="07dp"
                            android:drawableLeft="@drawable/rupee"
                            android:background="@drawable/capsul_button4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/loanamount1"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Loan Amount"

                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="number"
                            android:maxLength="15"
                            android:padding="12dp"
                            android:background="@drawable/capsul_button6"

                            android:layout_marginRight="15dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatEditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="07dp"
                            android:drawableLeft="@drawable/city"
                            android:background="@drawable/capsul_button4"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/loan"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="City"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="number"
                            android:textColor="@color/colorPrimary"
                            android:maxLength="12"
                            android:padding="12dp"
                            android:background="@drawable/capsul_button6"

                            android:layout_marginRight="15dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="07dp"
                            android:drawableLeft="@drawable/ic_name2"
                            android:background="@drawable/capsul_button4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/address0"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="State"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/colorPrimary"
                            android:maxLength="12"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:backgroundTint="#ff000000"
                            android:backgroundTintMode="src_in"
                            android:spinnerMode="dropdown"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/address11"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="State"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/colorPrimary"
                            android:maxLength="12"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:backgroundTint="#ff000000"
                            android:backgroundTintMode="src_in"
                            android:spinnerMode="dropdown"

                            android:layout_marginRight="15dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/address12"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
